<background>
  <mode>day-night</mode>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>2</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<static>
<duration>@startlength@</duration>
<file>@datadir@/backgrounds/timed/@night@</file>
</static>

<transition type="overlay">
<duration>@starttoday@</duration>
<from>@datadir@/backgrounds/timed/@night@</from>
<to>@datadir@/backgrounds/timed/@day@</to>
</transition>

<static>
<duration>@day@</duration>
<file>@datadir@/backgrounds/timed/@day@</file>
</static>

<transition type="overlay">
<duration>@daytonight@</duration>
<from>@datadir@/backgrounds/timed/@day@</from>
<to>@datadir@/backgrounds/timed/@night@</to>
</transition>

<static>
<duration>@nightlength@</duration>
<file>@datadir@/backgrounds/timed/@night@</file>
</static>

</background>
