<background>
  <mode>day-sunset-night</mode>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>4</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<static>
<duration>@starttosunrise@</duration>
<file>@datadir@/backgrounds/timed/@night@</file>
</static>

<transition type="overlay">
<duration>@sunrise@</duration>
<from>@datadir@/backgrounds/timed/@night@</from>
<to>@datadir@/backgrounds/timed/@day@</to>
</transition>

<static>
<duration>@day@</duration>
<file>@datadir@/backgrounds/timed/@day@</file>
</static>

<transition type="overlay">
<duration>@sunset@</duration>
<from>@datadir@/backgrounds/timed/@day@</from>
<to>@datadir@/backgrounds/timed/@sunset@</to>
</transition>

<transition type="overlay">
<duration>@nightfall@</duration>
<from>@datadir@/backgrounds/timed/@sunset@</from>
<to>@datadir@/backgrounds/timed/@night@</to>
</transition>

<static>
<duration>@nighttostart@</duration>
<file>@datadir@/backgrounds/timed/@night@</file>
</static>

</background>
