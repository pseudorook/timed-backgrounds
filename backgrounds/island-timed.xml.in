<background>
  <mode>day-night</mode>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>4</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<static>
<duration>@starttosunrise@</duration>
<file>@datadir@/backgrounds/timed/island-night.jpg</file>
</static>

<transition type="overlay">
<duration>@sunrise@</duration>
<from>@datadir@/backgrounds/timed/island-night.jpg</from>
<to>@datadir@/backgrounds/timed/island-day.jpg</to>
</transition>

<static>
<duration>@day@</duration>
<file>@datadir@/backgrounds/timed/island-day.jpg</file>
</static>

<transition type="overlay">
<duration>@sunset@</duration>
<from>@datadir@/backgrounds/timed/island-day.jpg</from>
<to>@datadir@/backgrounds/timed/island-night.jpg</to>
</transition>

<static>
<duration>@nighttostart@</duration>
<file>@datadir@/backgrounds/timed/island-night.jpg</file>
</static>

</background>
