<background>
  <mode>day-night</mode>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>4</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<static>
<duration>@startlength@</duration>
<file>@datadir@/backgrounds/timed/island-night.jpg</file>
</static>

<transition type="overlay">
<duration>@starttoday@</duration>
<from>@datadir@/backgrounds/timed/island-night.jpg</from>
<to>@datadir@/backgrounds/timed/island-day.jpg</to>
</transition>

<static>
<duration>@daylength@</duration>
<file>@datadir@/backgrounds/timed/island-day.jpg</file>
</static>

<transition type="overlay">
<duration>@daytonight@</duration>
<from>@datadir@/backgrounds/timed/island-day.jpg</from>
<to>@datadir@/backgrounds/timed/island-night.jpg</to>
</transition>

<static>
<duration>@nightlength@</duration>
<file>@datadir@/backgrounds/timed/island-night.jpg</file>
</static>

</background>
