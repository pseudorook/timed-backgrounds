<background>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>6</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<!-- This animation will start at 6 AM. -->

<!-- Night starts to transition to day at 6 AM. The transition lasts for 2
     hours, ending at 8 AM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>@datadir@/backgrounds/extra/island-night.jpg</from>
<to>@datadir@/backgrounds/extra/island-day.jpg</to>
</transition>

<!-- Day proper begins at 8 AM and lasts for 11 hours until 7 PM. -->
<static>
<duration>39600.0</duration>
<file>@datadir@/backgrounds/extra/island-day.jpg</file>
</static>

<!-- Day starts to transition to night at 7 PM. The transition lasts for 2
     hours, ending at 9 PM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>@datadir@/backgrounds/extra/island-day.jpg</from>
<to>@datadir@/backgrounds/extra/island-night.jpg</to>
</transition>

<!-- It's night. It'll stay dark for 9 hours up until 6 AM. -->
<static>
<duration>32400.0</duration>
<file>@datadir@/backgrounds/extra/island-night.jpg</file>
</static>

</background>
