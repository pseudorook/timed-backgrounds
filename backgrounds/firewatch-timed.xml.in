<background>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>6</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<!-- This animation will start at 6 AM. -->

<!-- Transition from night to sunrise at 6 AM. It will last for 1 hour. -->
<transition type="overlay">
<duration>3600.0</duration>
<from>@datadir@/backgrounds/timed/firewatch-night.jpg</from>
<to>@datadir@/backgrounds/timed/firewatch.jpg</to>
</transition>

<!-- We start transitioning from sunrise to day at 7 AM. It will last for 1
     hour. -->
<transition type="overlay">
<duration>3600.0</duration>
<from>@datadir@/backgrounds/timed/firewatch.jpg</from>
<to>@datadir@/backgrounds/timed/firewatch-day.jpg</to>
</transition>

<!-- Day starts at 8 AM. It lasts for 10 hours, ending at 6 PM. -->
<static>
<duration>36000.0</duration>
<file>@datadir@/backgrounds/timed/firewatch-day.jpg</file>
</static>

<!-- We transition from day to sunset at 6 PM. It will last for 1 hour. -->
<transition type="overlay">
<duration>3600.0</duration>
<from>@datadir@/backgrounds/timed/firewatch-day.jpg</from>
<to>@datadir@/backgrounds/timed/firewatch.jpg</to>
</transition>

<!-- We transition from sunset to night at 7 PM. It will last for 1 hour. -->
<transition type="overlay">
<duration>3600.0</duration>
<from>@datadir@/backgrounds/timed/firewatch.jpg</from>
<to>@datadir@/backgrounds/timed/firewatch-night.jpg</to>
</transition>

<!-- Night starts at 8 PM and lasts for 10 hours until 6 AM. -->
<static>
<duration>36000.0</duration>
<file>@datadir@/backgrounds/timed/firewatch-night.jpg</file>
</static>

</background>
