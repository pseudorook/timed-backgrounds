<static>
<duration>@daylength@</duration>
<file>@datadir@/backgrounds/timed/24-hours-day.jpg</file>
</static>

<static>
<duration>@sunsetlength@</duration>
<file>@datadir@/backgrounds/timed/24-hours-evening.jpg</file>
</static>

<static>
<duration>@nightlength@</duration>
<file>@datadir@/backgrounds/timed/24-hours-night.jpg</file>
</static>

</background>
