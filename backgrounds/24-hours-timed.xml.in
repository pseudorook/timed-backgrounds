<background>
  <mode>sunrise-day-sunset-night-static</mode>
  <starttime>
    <year>2011</year>
    <month>11</month>
    <day>24</day>
    <hour>2</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>

<static>
<duration>@startlength@</duration>
<file>@datadir@/backgrounds/timed/24-hours-night.jpg</file>
</static>

